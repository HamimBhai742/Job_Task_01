generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(uuid())
  email String @unique
  password String
  role Role
  organizationId String?
  organization Organization? @relation(fields: [organizationId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Organization {
  id String @id @default(uuid())
  name String @unique
  users User[]
  projects Project[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("organizations")
}

model Project{
  id String @id @default(uuid())
  name String
  description String?
  organizationId String
  organization Organization @relation(fields: [organizationId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("projects")
}

 enum Role {
  PLATFORM_ADMIN
  OG_ADMIN
  OG_MEMBER
}



